<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Views/Shared/LeafletJS/leaflet.css")" rel="stylesheet" type="text/css" />
    <!--[if lte IE 8]>
    <link href="@Url.Content("~/Views/Shared/LeafletJS/leaflet-ie.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Views/Shared/LeafletJS/locate-ie.css")" rel="stylesheet" type="text/css" />
    <![endif]-->
    <link href="@Url.Content("~/Views/Shared/LeafletJS/mobile.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Views/Shared/LeafletJS/locate.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Views/Shared/LeafletJS/leaflet.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Views/Shared/LeafletJS/proj4js-compressed.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Views/Shared/LeafletJS/proj4leaflet.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Views/Shared/LeafletJS/locate.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>@*GMap.NET fusion power! ;}*@</h1>
            </div>
            <div id="logindisplay">
                Welcome <strong>@User.Identity.Name</strong>!
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
    </div>
</body>
</html>
